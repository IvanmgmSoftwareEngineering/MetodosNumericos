%% practica1.3: Metodo de Newton-Raphson

%  Datos: 
%       --> Funcion que queremos Aproximar:         f(x)  
%       
%       --> Vector inicial :                        X
%
%       --> Tolerancia:                             epsilon  



function [zero] = secante(f,X,epsilon)
syms x ;

    X_aux=X;
    contador_iteraciones=0;
    while(true)
        contador_iteraciones=contador_iteraciones+1;
        f0=double(subs(f,x,X_aux(1));
        f1=double(subs(f,x,X_aux(2));
        df1=double(subs((f1-f0)/(X_aux(2)-X_aux(2))));
        x_aux=(-f0/df0)+x0_aux;
    
        if(abs(x_aux-x0_aux)<epsilon)
            zero=x_aux;
            contador_iteraciones
            break;
        else
            x0_aux=x_aux;
        end  
    end
%FIN FUNCION
end

